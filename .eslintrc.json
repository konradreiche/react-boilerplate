{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "after": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/react-in-jsx-scope": [
            "error"
        ],
        "react/jsx-filename-extension": [
            "warn"
        ],
        "react/jsx-pascal-case": [
            "warn"
        ],
        "react/jsx-no-duplicate-props": [
            "error"
        ],
        "react/jsx-uses-vars": [
            "error"
        ],
        "react/jsx-uses-react": [
            "error"
        ]
    }
}
